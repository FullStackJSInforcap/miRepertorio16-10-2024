<!DOCTYPE html>
<html lang="en">

{{> head }}

<body>

    {{> navbar }}

    <section>
        <div class="container mt-3">
            <form action="/canciones/findByArtista" method="get">
                <div class="mb-3">
                    <label for="artista" class="form-label">Artista</label>
                    <input type="text" class="form-control" id="artista" name="artista">
                </div>
                <button type="submit" class="btn btn-primary">Buscar</button>
            </form>
        </div>
    </section>

    <section>
        <div class="container mt-3">
            <p>{{respuesta.msg}}</p>
        </div>
    </section>

    <section>
        <div class="container mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Identificador</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Artista</th>
                        <th scope="col">Tono</th>
                        <th scope="col">Actualizar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each respuesta.datos}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{titulo}}</td>
                        <td>{{artista}}</td>
                        <td>{{tono}}</td>
                        <td><a href="/canciones/update?artista={{artista}}"><button class="btn btn-success">Actualizar</button></a></td>
                        <td><a href="/canciones/deleteById?id={{id}}"><button class="btn btn-danger">Eliminar</button></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>